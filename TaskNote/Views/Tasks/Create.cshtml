@model TaskNote.Models.Task

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    @using (Html.BeginForm()) 
    {
        @Html.AntiForgeryToken()
        
<div class="panel panel-default">
    <div class="panel-heading">Создание задачи</div>
    <table class="table table-striped">
        <div class="container">
            <form>
                <div class="form-group">
                    <p>Выберите дату: </p>
                    <div class="form-text text-muted">
                        @Html.TextBoxFor(model => model.FinishDate, new { type = "date", @class = "form-text text-muted" })
                        @Html.ValidationMessageFor(model => model.FinishDate, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <p>Введите задачу: </p>
                    <div class="form-text text-muted">
                        @Html.EditorFor(model => model.TaskNote, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TaskNote, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="form-text text-muted">
                        <input type="submit" value="Сохранить" class="btn btn-primary" /> |
                        @Html.ActionLink("Вернуться к списку задач", "Index")
                    </div>
                </div>
            </form>
        </div>
    </table>
</div>

    }
    
